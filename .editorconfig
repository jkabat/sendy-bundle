root = true

[*]
charset = utf-8
end_of_line = LF
insert_final_newline = true
trim_trailing_whitespace = true

[*.php]
indent_style = space
indent_size = 4

[{*.json,*.yaml,*.yml}]
indent_style = space
indent_size = 4

[{*.less,*.sass,*.scss}]
indent_style = space
indent_size = 4

[*.md]
max_line_length = 120
